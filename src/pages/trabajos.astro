---
import Navbar from "../components/Navbar.jsx";
import ProjectsGrid from "../components/ProjectsGrid.jsx";
import Footer from "../components/Footer.jsx";
import { projects } from "../utils/projects-data.js"; // ← Importamos desde el archivo central
import "../styles/base.css";
import "../styles/animations.css";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trabajos - SoMoS</title>
    <meta
      name="description"
      content="Portfolio de trabajos realizados por SoMoS. Descubre nuestros proyectos más recientes en desarrollo web y diseño."
    />
    <link rel="icon" type="image/png" href="/logo_render.png" />
  </head>
  <body class="bg-background text-text flex flex-col min-h-screen">
    <Navbar client:load />

    <main class="pt-24 pb-16 flex-grow">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h1 class="text-5xl md:text-6xl font-bold mb-6">
            Nuestros <span class="text-primary">Trabajos</span>
          </h1>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Descubre algunos de nuestros proyectos más recientes donde
            combinamos diseño innovador con tecnología de vanguardia.
          </p>
        </div>

        <ProjectsGrid projects={projects} client:load />
      </div>
    </main>

    <Footer client:load />
  </body>
</html>