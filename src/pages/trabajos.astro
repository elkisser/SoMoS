---
import Navbar from "../components/Navbar.jsx";
import ProjectsGrid from "../components/ProjectsGrid.jsx";
import WorksHero from "../components/WorksHero.jsx";
import Footer from "../components/Footer.jsx";
import { projects } from "../utils/projects-data.js";
import "../styles/base.css";
import "../styles/animations.css";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trabajos Realizados - SoMoS</title>
    <meta
      name="description"
      content="Descubre los trabajos realizados por SoMoS. Proyectos de desarrollo web, apps mÃ³viles y branding que han impulsado el crecimiento de nuestros clientes."
    />
    <link rel="icon" type="image/png" href="/logo_render.png" />
  </head>
  <body class="bg-background text-text flex flex-col min-h-screen">
    <Navbar client:load />

    <main class="pt-28 pb-20 flex-grow overflow-x-hidden">
      <div class="container mx-auto px-4 sm:px-6">
        <WorksHero projectsCount={projects.length} client:load />

        {/* Projects Grid */}
        <ProjectsGrid projects={projects} client:load />
      </div>
    </main>

    <Footer client:load />
  </body>
</html>